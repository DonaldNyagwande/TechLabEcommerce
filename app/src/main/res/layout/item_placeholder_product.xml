<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/sfl_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <View
                android:id="@+id/iv_picture"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:background="@color/shimmerBackground"/>

            <TextView
                android:id="@+id/tv_mark"
                android:layout_width="@dimen/shimmer_product_mark"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_picture"
                android:layout_marginTop="4dp"
                android:background="@color/shimmerBackground"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/shimmer_product_name"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mark"
                android:layout_marginTop="4dp"
                android:background="@color/shimmerBackground" />

            <TextView
                android:id="@+id/tv_view_number"
                android:layout_width="@dimen/shimmer_product_view_number"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="4dp"
                android:background="@color/shimmerBackground"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="@dimen/shimmer_product_price"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_view_number"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/shimmerBackground"/>

        </RelativeLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.cardview.widget.CardView>
